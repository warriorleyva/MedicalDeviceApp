        <Entry x:Name="Apellido" FontSize="20" Placeholder="Apellido"></Entry>
        <DatePicker x:Name="Nacimiento"></DatePicker>
        <Picker x:Name="Genero" Title="GÃ©nero">
            <Picker.Items>
            <x:String>Masculino</x:String>
            <x:String>Femenino</x:String>    
            </Picker.Items>
        </Picker>
        <Button Text="Aceptar" HorizontalOptions="Center" Clicked="Aceptar_Clicked"></Button>
    </StackLayout>
    
</ContentPage>
